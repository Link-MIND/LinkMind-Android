<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="14dp"
  android:background="@drawable/shape_white_fill_12_rect"
  android:layout_marginBottom="8dp">

  <ImageView
    android:id="@+id/iv_clip_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_clip_24"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_clip_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    android:text="@string/clip_all"
    android:textAppearance="@style/Typography.suit.semibold_16"
    android:textColor="@color/neutrals850"
    app:layout_constraintStart_toEndOf="@id/iv_clip_icon"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_clip_amount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="4dp"
    android:text="nê°œ"
    android:textColor="@color/neutrals850"
    app:layout_constraintEnd_toStartOf="@id/iv_category_clip_arrow"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/iv_category_clip_arrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:src="@drawable/ic_arrow_18_svg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
